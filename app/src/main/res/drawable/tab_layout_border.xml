<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="@dimen/separator_invisible"
        android:right="@dimen/separator_invisible"
        android:bottom="@dimen/separator_visible"
        android:left="@dimen/separator_invisible">

        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/separator_stroke_width"
                android:color="@color/listSeparatorColor" />
            <gradient
                android:startColor="@android:color/white"
                android:endColor="@android:color/white"/>
        </shape>
    </item>
</layer-list>